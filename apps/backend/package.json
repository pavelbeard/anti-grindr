{
  "name": "backend",
  "version": "0.0.3",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch --include ./swagger.yaml ./src/index.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --fix --ext .ts",
    "format": "prettier --write .",
    "check-types": "tsc --noEmit",
    "test:unit": "vitest -c ./vitest.config.unit.ts",
    "test:unit:ui": "vitest -c ./vitest.config.unit.ts --ui",
    "test:int": "./scripts/run-integration.sh",
    "test:int:ui": "./scripts/run-integration.sh --ui",
    "prisma:migrate": "prisma migrate dev"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.6.4",
  "dependencies": {
    "@node-rs/bcrypt": "^1.10.7",
    "@prisma/client": "^6.5.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "ioredis": "^5.6.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.12.1",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@jest/globals": "^29.7.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "5.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.10",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "@vitest/ui": "3.0.9",
    "core-js": "^3.41.0",
    "eslint": "^9.22.0",
    "eslint-plugin-prettier": "^5.2.6",
    "globals": "^16.0.0",
    "jest-mock-extended": "4.0.0-beta1",
    "mongodb-memory-server": "^10.1.4",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prisma": "^6.5.0",
    "supertest": "^7.1.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.9",
    "vitest-mock-extended": "^3.0.1"
  },
  "config": {
    "tsconfig": "./tsconfig.json"
  },
  "eslintConfig": {
    "extends": [
      "@eslint/js",
      "@typescript-eslint",
      "eslint:recommended",
      "plugin:prettier/recommended"
    ]
  },
  "prettier": {
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 80,
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  }
}
